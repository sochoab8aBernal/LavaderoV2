<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manages">

    <Spinner
        android:id="@+id/spEmpleados"
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="50dp"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="117dp" />

    <RadioGroup
        android:id="@+id/rdGroup"
        android:layout_width="297dp"
        android:layout_height="120dp"
        android:layout_below="@+id/spEmpleados"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="56dp" >

        <RadioButton
            android:id="@+id/rbDaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diario" />

        <RadioButton
            android:id="@+id/rbMonthly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensual" />

        <RadioButton
            android:id="@+id/rbYearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anual" />
    </RadioGroup>


    <Button
        android:id="@+id/btnFilter"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="51dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/button_border"
        android:text="FILTRAR"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:layout_below="@+id/btnFilter"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#E8E6E6" />


    <View
        android:id="@+id/view2"
        android:layout_width="500dp"
        android:layout_height="1dp"
        android:layout_above="@+id/txtTotal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="4dp"
        android:background="#E8E6E6" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_below="@+id/btnFilter"
        android:layout_marginTop="73dp">


        <TableLayout
            android:id="@+id/table"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnFilter"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"

            android:layout_marginEnd="0dp">


        </TableLayout>

    </ScrollView>

    <EditText
        android:id="@+id/edtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rdGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="90dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Fecha"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="52dp"
        android:text="VALOR"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="283dp"
        android:text="ID PLACA"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="171dp"
        android:text="FECHA"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="9dp"
        android:text="TOTAL"
        android:textColor="#AA0303"
        android:textSize="23dp"
        android:textStyle="bold" />


</RelativeLayout>