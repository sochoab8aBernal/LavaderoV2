<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Notifica">





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C5FAFF">

            <EditText
                android:id="@+id/edt_placasNotifica"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="93dp"
                android:layout_marginTop="141dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="Placas"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_notifica"
                android:layout_width="203dp"
                android:layout_height="57dp"
                android:layout_below="@+id/edt_placasNotifica"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="40dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/button_border"
                android:text="NOTIFICAR"
                android:textColor="@color/white" />




            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="104dp"

                app:srcCompat="@drawable/finalbanner" />






        </RelativeLayout>

</RelativeLayout>